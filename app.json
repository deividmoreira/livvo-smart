{
  "expo": {
    "name": "Livvo Smart",
    "slug": "livvo-smart",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563EB"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.livvosmart.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "O app precisa da sua localização para mostrar imóveis próximos a você.",
        "NSCameraUsageDescription": "O app precisa de acesso à câmera para adicionar fotos de imóveis.",
        "NSPhotoLibraryUsageDescription": "O app precisa de acesso às fotos para adicionar imagens de imóveis.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "googleMapsApiKey": "YOUR_IOS_GOOGLE_MAPS_API_KEY"
      }
    },
    "android": {
      "package": "com.livvosmart.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563EB"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_ANDROID_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "O app precisa da sua localização para mostrar imóveis próximos a você."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "O app precisa de acesso às fotos para adicionar imagens de imóveis.",
          "cameraPermission": "O app precisa de acesso à câmera para adicionar fotos de imóveis."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "ae7be924-27a3-405c-961a-5b84b897082d"
      },
      "router": {}
    },
    "owner": "moreiradeivids-organization"
  }
}
